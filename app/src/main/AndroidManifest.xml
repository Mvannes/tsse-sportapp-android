<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sport.tsse.com.sportapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".onboarding.startUp.StartupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".onboarding.register.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".onboarding.startUp.StartupActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".onboarding.forgotPassword.ForgotPasswordActivity"
            android:parentActivityName=".onboarding.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".onboarding.login.LoginActivity"
            android:parentActivityName=".onboarding.startUp.StartupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SingleFragmentNavigationActivity"
            android:label="@string/home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".exercise.detail.ExerciseDetailActivity"
            android:label="Detail"
            android:parentActivityName=".SingleFragmentNavigationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>